<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- header card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="16dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvClubName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="club name"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#222222" />

                    <TextView
                        android:id="@+id/tvShiftInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tonight Â· main floor"
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="profile" />

                    <TextView
                        android:id="@+id/tvProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="profile"
                        android:textSize="12sp"
                        android:textColor="#555555"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- table layout card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="#FFFFFF"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="table layout"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#222222" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="12dp"
                    android:background="#F0F1F5"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="table map placeholder"
                        android:textColor="#888888"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- team section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tonight's team"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:elevation="3dp"
            android:backgroundTint="#FFFFFF"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- team member rows (keeping your content, just spacing) -->
                <!-- rock -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="rock l" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="rock l."
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222222" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="manager"
                            android:textColor="#777777"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="page"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- arthur -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="arthur l" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="arthur l."
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222222" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="boh support"
                            android:textColor="#777777"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="page"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- charlize -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="charlize c" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="charlize c."
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222222" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="service attendant"
                            android:textColor="#777777"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="page"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- kal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher_round"
                        android:contentDescription="kal e" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kal e."
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#222222" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="security"
                            android:textColor="#777777"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="page"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- bottom nav card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            app:cardCornerRadius="18dp"
            android:elevation="4dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="quick actions"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp" />

                <GridLayout
                    android:id="@+id/buttonGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:useDefaultMargins="true"
                    android:rowCount="2"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnInventory"
                        android:text="inventory"
                        android:backgroundTint="#2196F3"
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnOrders"
                        android:text="orders"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnTasks"
                        android:text="tasks"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btnSettings"
                        android:text="settings"
                        android:backgroundTint="#9C27B0"
                        android:textColor="#FFFFFF"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logout"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>
