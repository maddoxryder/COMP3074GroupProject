<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- HEADER: club name + shift + profile/logo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- club + shift text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvClubName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Club Control"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/textPrimary" />

                    <TextView
                        android:id="@+id/tvShiftInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tonight Â· Main Floor"
                        android:textSize="13sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- profile / logo -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/logo"
                        android:padding="4dp"
                        android:contentDescription="Profile / logo"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/tvProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="12sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- QUICK ACTIONS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick actions"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textPrimary"
                    android:layout_marginBottom="8dp" />

                <GridLayout
                    android:id="@+id/buttonGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">

                    <Button
                        android:id="@+id/btnInventory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Inventory"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />

                    <Button
                        android:id="@+id/btnOrders"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Orders"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />

                    <Button
                        android:id="@+id/btnTasks"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Tasks"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />

                    <Button
                        android:id="@+id/btnSettings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Settings"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />

                    <Button
                        android:id="@+id/btnPings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Pings"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />

                    <Button
                        android:id="@+id/btnPingInbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Ping Inbox"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/accentPrimary"
                        android:textColor="@color/textOnAccent" />


                </GridLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TEAM HEADING -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tonight's team"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp" />

        <!-- TEAM CARD WITH PHOTOS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:backgroundTint="@color/cardBackground"
            app:cardCornerRadius="18dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Rock -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/rock"
                        android:padding="3dp"
                        android:contentDescription="Rock profile"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rock L."
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manager"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- Arthur -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/arthur"
                        android:padding="3dp"
                        android:contentDescription="Arthur profile"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arthur L."
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOH Support"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- Charlize -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Charlize profile"
                        android:padding="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/charlize" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Charlize C."
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Attendant"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- Kal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/kal"
                        android:padding="3dp"
                        android:contentDescription="Kal profile"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kal E."
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/textPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Security"
                            android:textSize="13sp"
                            android:textColor="@color/textSecondary" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LOGOUT -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/textSecondary" />

    </LinearLayout>
</ScrollView>
