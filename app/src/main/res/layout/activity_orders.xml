<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/backButtonOrders"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Club Name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Table 1 -->
            <TextView
                android:text="Table #1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="1x Item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="2x Item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="3x Item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <EditText
                android:hint="Notes"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <!-- Table 2 -->
            <TextView
                android:text="Table #2"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="1x Item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="2x Item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="3x Item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <EditText
                android:hint="Notes"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

            <!-- Table 3 -->
            <TextView
                android:text="Table #3"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="1x Item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="2x Item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:text="3x Item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <EditText
                android:hint="Notes"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
