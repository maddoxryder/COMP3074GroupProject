<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F4F5F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/backButtonOrders"
            android:text="â† back"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="orders"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#222222" />

        <View
            android:layout_width="40dp"
            android:layout_height="1dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- table 1 card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="3dp"
                app:cardCornerRadius="16dp"
                xmlns:app="http://schemas.android.com/apk/res-auto">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="table #1"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView android:text="1x item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="2x item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="3x item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

                    <EditText
                        android:hint="notes"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="top|start"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- table 2 card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="table #2"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView android:text="1x item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="2x item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="3x item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

                    <EditText
                        android:hint="notes"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="top|start"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- table 3 card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#FFFFFF"
                android:elevation="3dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="table #3"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView android:text="1x item 1" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="2x item 2" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                    <TextView android:text="3x item 3" android:layout_width="wrap_content" android:layout_height="wrap_content" />

                    <EditText
                        android:hint="notes"
                        android:layout_marginTop="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="top|start"
                        android:background="@android:drawable/edit_text"
                        android:padding="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
